<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagem do logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/logo_raizes"
            android:contentDescription="Logo do app"
            android:layout_marginBottom="32dp" />

        <!-- Título do app -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raízes do Araguaia"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#AD1457"
            android:layout_marginBottom="16dp" />

        <!-- Descrição do app -->
        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Um guia para turistas que desejam conhecer os pontos turísticos e a história local das cidades de Barra do Garças, Pontal do Araguaia e Aragarças. Conheça as raízes do nosso Araguaia!"
            android:textColor="#880E4F"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textAlignment="center"
            android:layout_marginBottom="40dp" />

        <!-- Botão Começar -->
        <Button
            android:id="@+id/btnComecar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Começar"
            android:textColor="#FFFFFF"
            android:background="@drawable/botao_comecar"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>
