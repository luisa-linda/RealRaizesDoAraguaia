<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Praia Quarto Crescente"
            android:textColor="#C2185B"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Imagem -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/praiaquartocrescente"
            android:contentDescription="Imagem da Praia Quarto Crescente" />

        <!-- Botão Localização -->
        <Button
            android:id="@+id/LocalizacaoPraiaQuartoCrescente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Localização"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C2185B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Abrir localização no Google Maps" />

        <!-- Descrição -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Praia Quarto Crescente fica em Aragarças (GO), bem próxima de Barra do Garças (MT). É famosa pelas águas calmas, areia clara e estrutura de lazer. Durante a temporada de junho a agosto, recebe barracas, shows e atividades que atraem moradores e turistas da região."
            android:textSize="20sp"
            android:textColor="#555555"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
